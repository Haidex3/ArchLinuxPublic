{
    "manifest_version": 2,
    "name": "hatheme",
    "version": "1.0",
    "description": "A Firefox theme with dynamic colours from my hatheme dotfiles.",
    "browser_specific_settings": {
        "gecko": {
            "id": "hathemefox@Haidrex3.com",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    },
    "background": {
        "scripts": ["dist/extension.js"]
    },
    "permissions": ["nativeMessaging", "theme"]
}
